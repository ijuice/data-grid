<table class="clearfix tablesorter data-grid">
  <thead>
  <tr class="data-grid-title-row">
    <%
      headers.each do |h| %>
        <th <%h[:html].each do |key, option| %>
          <%= "#{key}=#{option}" %>
        <% end %>
        >
          <%= h[:text] %>
        </th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% content.each do |r| %>
      <tr>
        <% r.each do |c| %>
            <td>
              <%= c %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<%= data_grid.pagination %>
